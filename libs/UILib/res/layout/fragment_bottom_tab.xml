<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_tab_bar" />
    
    <com.quick.uilib.universalradiogroup.UniversalRadioGroup
     android:id="@+id/bottom_tab_bar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:background="?attr/bottom_tab_bar_background"
     android:paddingTop="?attr/bottom_tab_bar_top_bottom_padding"
     android:paddingBottom="?attr/bottom_tab_bar_top_bottom_padding"
     >
     </com.quick.uilib.universalradiogroup.UniversalRadioGroup>   

</RelativeLayout>
